  <title>Shailendra Smart AI</title>
  <meta charset="UTF-8">
  <style>
    body {
      font-family: Arial;
      padding: 20px;
      background: #f7f7f7;
    }
    input, button, textarea {
      font-size: 16px;
      padding: 10px;
      margin: 5px 0;
      width: 100%;
      box-sizing: border-box;
    }
    #response {
      margin-top: 20px;
      padding: 10px;
      background: #fff;
      border: 1px solid #ddd;
      min-height: 100px;
    }
    .mic-btn {
      width: 48px;
      height: 48px;
      border-radius: 24px;
      background: red;
      color: #fff;
      border: none;
      font-size: 24px;
      margin-top: 10px;
    }
  </style>
